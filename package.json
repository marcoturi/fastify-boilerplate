{
  "name": "fastify-boilerplate",
  "version": "1.0.0",
  "description": "A Fastify template that follows the Clean Architecture principles and encourages established practices.",
  "author": "Marco Turi <marco.turi@hotmail.it>",
  "license": "MIT",
  "scripts": {
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.example', '.env', fs.constants.COPYFILE_EXCL)\"",
    "start": "tsx watch src --env-file=.env | pino-pretty",
    "build": "tsc --project tsconfig.build.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest --selectProjects unit-tests",
    "test:integration": "vitest --selectProjects integration-tests",
    "test:e2e": "npx cucumber-js --exit",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "type:check": "tsc --noEmit",
    "db": "dbmate h",
    "db:create-migration": "dbmate new",
    "db:migrate": "dbmate -e DBMATE_DATABASE_URL up",
    "db:create-seed": "dbmate -e DBMATE_DATABASE_URL -d ./db/seeds/ new",
    "db:seed": "dbmate -e DBMATE_DATABASE_URL -d ./db/seeds/ up",
    "generate:client-types": "npx openapi-typescript http://127.0.0.1:3000/api-docs/json -o ./client.schema.d.ts",
    "depcruise": "depcruise",
    "deps:validate": "depcruise src --config .dependency-cruiser.js --output-type err-long",
    "deps:graph": "depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > doc/dependency-graph.svg",
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release",
    "outdated": "yarn upgrade-interactive"
  },
  "engines": {
    "node": ">=20.6.0",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.1.1",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@fastify/autoload": "5.8.3",
    "@fastify/awilix": "5.1.0",
    "@fastify/cors": "9.0.1",
    "@fastify/helmet": "11.1.1",
    "@fastify/request-context": "5.1.0",
    "@fastify/swagger": "8.14.0",
    "@fastify/swagger-ui": "3.1.0",
    "@fastify/type-provider-json-schema-to-ts": "3.0.0",
    "@fastify/type-provider-typebox": "4.0.0",
    "@fastify/under-pressure": "8.5.0",
    "@gquittet/graceful-server": "5.0.2",
    "@graphql-tools/load-files": "7.0.0",
    "@graphql-tools/merge": "9.0.4",
    "@sinclair/typebox": "0.32.31",
    "ajv-formats": "3.0.1",
    "awilix": "10.0.2",
    "env-schema": "5.2.1",
    "fastify": "4.27.0",
    "fastify-plugin": "4.5.1",
    "graphql": "16.8.1",
    "helmet": "7.1.0",
    "mercurius": "14.1.0",
    "pino": "9.1.0",
    "postgres": "3.4.4",
    "ramda": "0.30.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@cucumber/cucumber": "10.8.0",
    "@cucumber/html-formatter": "21.3.1",
    "@cucumber/messages": "24.1.0",
    "@cucumber/pretty-formatter": "1.0.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.0.6",
    "@semantic-release/npm": "12.0.1",
    "@semantic-release/release-notes-generator": "14.0.0",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@tsconfig/node20": "20.1.4",
    "@types/node": "20.14.2",
    "@types/ramda": "0.30.0",
    "@typescript-eslint/eslint-plugin": "7.12.0",
    "@typescript-eslint/parser": "7.12.0",
    "artillery": "2.0.15",
    "artillery-plugin-faker": "5.0.2",
    "dbmate": "2.17.0",
    "dependency-cruiser": "16.3.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-promise": "6.2.0",
    "eslint-plugin-unicorn": "53.0.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.5",
    "pino-pretty": "11.1.0",
    "pinst": "3.0.0",
    "prettier": "3.3.1",
    "semantic-release": "24.0.0",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.10",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.15.2",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  },
  "keywords": [
    "fastify",
    "domain-driven-design",
    "functional-programming",
    "vertical-slice-architecture",
    "cucumber",
    "clean-architecture",
    "typescript",
    "template",
    "boilerplate"
  ]
}
