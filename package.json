{
  "name": "fastify-boilerplate",
  "version": "2.0.0",
  "description": "A Fastify template that follows the Clean Architecture principles and encourages established practices.",
  "author": "Marco Turi <marco.turi@hotmail.it>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.example', '.env', fs.constants.COPYFILE_EXCL)\"",
    "start": "tsx watch src --env-file=.env | pino-pretty",
    "start:prod": "node ./dist/index.js --env-file=.env",
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json && resolve-tspaths -p tsconfig.build.json -s ./src -o ./dist",
    "test": "yarn test:unit",
    "test:coverage": "c8 node --import tsx --test src/**/*.spec.ts",
    "test:unit": "node --import tsx --test src/**/*.spec.ts",
    "test:e2e": "FASTIFY_AUTOLOAD_TYPESCRIPT=1 NODE_OPTIONS='--import tsx' npx cucumber-js --exit",
    "format": "npx @biomejs/biome format --write .",
    "format:ci": "npx @biomejs/biome format",
    "lint": "npx @biomejs/biome lint --write .",
    "lint:ci": "npx @biomejs/biome lint",
    "type:check": "tsc --noEmit",
    "db": "dbmate h",
    "db:create-migration": "dbmate new",
    "db:migrate": "dbmate -e DBMATE_DATABASE_URL up",
    "db:create-seed": "dbmate -e DBMATE_DATABASE_URL -d ./db/seeds/ new",
    "db:seed": "dbmate -e DBMATE_DATABASE_URL -d ./db/seeds/ up",
    "db:seed:users": "artillery run ./tests/user/create-user/create-user.artillery.yaml",
    "generate:client-types": "npx openapi-typescript http://127.0.0.1:3000/api-docs/json -o ./client.schema.d.ts",
    "depcruise": "depcruise",
    "deps:validate": "depcruise src --config .dependency-cruiser.cjs --output-type err-long",
    "deps:graph": "depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > doc/dependency-graph.svg",
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release",
    "outdated": "yarn upgrade-interactive"
  },
  "engines": {
    "node": ">=24.0.0",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.12.0",
  "lint-staged": {
    "*.ts": [
      "npx @biomejs/biome lint --write",
      "npx @biomejs/biome format --write"
    ],
    "*.json": [
      "npx @biomejs/biome format --write"
    ]
  },
  "dependencies": {
    "@fastify/autoload": "6.3.1",
    "@fastify/awilix": "8.2.0",
    "@fastify/cors": "11.2.0",
    "@fastify/helmet": "13.0.2",
    "@fastify/request-context": "6.2.1",
    "@fastify/swagger": "9.7.0",
    "@fastify/swagger-ui": "5.2.5",
    "@fastify/type-provider-json-schema-to-ts": "5.0.0",
    "@fastify/type-provider-typebox": "6.1.0",
    "@fastify/under-pressure": "9.0.3",
    "@gquittet/graceful-server": "6.0.3",
    "@graphql-tools/load-files": "7.0.1",
    "@graphql-tools/merge": "9.1.7",
    "ajv-formats": "3.0.1",
    "awilix": "12.1.0",
    "env-schema": "7.0.0",
    "fastify": "5.7.4",
    "fastify-plugin": "5.1.0",
    "graphql": "16.12.0",
    "helmet": "8.1.0",
    "mercurius": "16.7.0",
    "pino": "10.3.1",
    "postgres": "3.4.8",
    "ramda": "0.32.0",
    "typebox": "1.0.81"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@cucumber/cucumber": "12.6.0",
    "@cucumber/html-formatter": "23.0.0",
    "@cucumber/messages": "32.0.1",
    "@cucumber/pretty-formatter": "3.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.5",
    "@semantic-release/npm": "13.1.4",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@tsconfig/node24": "24.0.4",
    "@types/node": "25.2.3",
    "@types/ramda": "0.31.1",
    "artillery": "2.0.30",
    "artillery-plugin-faker": "6.0.0",
    "c8": "10.1.3",
    "dbmate": "2.30.0",
    "dependency-cruiser": "17.3.8",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "pino-pretty": "13.1.3",
    "pinst": "3.0.0",
    "resolve-tspaths": "0.8.23",
    "semantic-release": "25.0.3",
    "tsc-alias": "1.8.16",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "keywords": [
    "fastify",
    "domain-driven-design",
    "functional-programming",
    "vertical-slice-architecture",
    "cucumber",
    "clean-architecture",
    "typescript",
    "template",
    "boilerplate"
  ]
}
