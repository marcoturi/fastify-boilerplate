{
  "name": "fastify-boilerplate",
  "version": "2.4.0",
  "description": "A Fastify template that follows the Clean Architecture principles and encourages established practices.",
  "author": "Marco Turi <marco.turi@hotmail.it>",
  "license": "MIT",
  "type": "module",
  "imports": {
    "#src/*": "./src/*",
    "#tests/*": "./tests/*"
  },
  "scripts": {
    "create:env": "node -e \"require('fs').copyFileSync('.env.example', '.env', require('fs').constants.COPYFILE_EXCL)\"",
    "start": "node --env-file=.env --import ./src/instrumentation.ts --watch src/index.ts | pino-pretty -clSt",
    "start:prod": "node --env-file=.env --import ./src/instrumentation.ts ./src/index.ts",
    "test": "pnpm test:unit",
    "test:coverage": "c8 node --test src/**/*.spec.ts",
    "test:unit": "node --test src/**/*.spec.ts",
    "test:e2e": "FASTIFY_AUTOLOAD_TYPESCRIPT=1 cucumber-js --exit",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "type:check": "tsc --noEmit",
    "check": "biome check && tsc --noEmit",
    "check:fix": "biome check --write && tsc --noEmit",
    "db": "dbmate h",
    "db:create-migration": "dbmate new",
    "db:migrate": "dbmate -e DBMATE_DATABASE_URL --no-dump-schema up",
    "db:create-seed": "dbmate -e DBMATE_DATABASE_URL -d ./db/seeds/ new",
    "db:seed": "dbmate -e DBMATE_DATABASE_URL -d ./db/seeds/ up",
    "db:seed:users": "k6 run ./tests/user/create-user/create-user.k6.ts",
    "generate:types": "bash scripts/generate-types.sh",
    "deps:validate": "depcruise src --config .dependency-cruiser.cjs --output-type err-long",
    "deps:graph": "depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > doc/dependency-graph.svg",
    "postinstall": "husky",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.29.3",
  "dependencies": {
    "@fastify/autoload": "6.3.1",
    "@fastify/awilix": "8.2.0",
    "@fastify/cors": "11.2.0",
    "@fastify/helmet": "13.0.2",
    "@fastify/otel": "0.16.0",
    "@fastify/request-context": "6.2.1",
    "@fastify/swagger": "9.7.0",
    "@fastify/swagger-ui": "5.2.5",
    "@fastify/type-provider-typebox": "6.1.0",
    "@fastify/under-pressure": "9.0.3",
    "@graphql-tools/load-files": "7.0.1",
    "@graphql-tools/merge": "9.1.7",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/instrumentation": "0.212.0",
    "@opentelemetry/instrumentation-http": "0.212.0",
    "@opentelemetry/sdk-node": "0.212.0",
    "ajv": "8.18.0",
    "ajv-formats": "3.0.1",
    "awilix": "12.1.1",
    "env-schema": "7.0.0",
    "fastify": "5.7.4",
    "fastify-plugin": "5.1.0",
    "graphql": "16.12.0",
    "mercurius": "16.7.0",
    "postgres": "3.4.8",
    "typebox": "1.0.81"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@cucumber/cucumber": "12.6.0",
    "@cucumber/html-formatter": "23.0.0",
    "@cucumber/messages": "32.0.1",
    "@cucumber/pretty-formatter": "3.0.0",
    "@graphql-codegen/cli": "6.1.1",
    "@graphql-codegen/typescript": "5.0.7",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.6",
    "@semantic-release/npm": "13.1.4",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@types/k6": "1.6.0",
    "@types/node": "25.2.3",
    "c8": "10.1.3",
    "dbmate": "2.30.0",
    "dependency-cruiser": "17.3.8",
    "husky": "9.1.7",
    "openapi-typescript": "7.13.0",
    "pino-pretty": "13.1.3",
    "semantic-release": "25.0.3",
    "typescript": "5.9.3"
  },
  "keywords": [
    "fastify",
    "domain-driven-design",
    "functional-programming",
    "vertical-slice-architecture",
    "cucumber",
    "clean-architecture",
    "typescript",
    "template",
    "boilerplate"
  ]
}
